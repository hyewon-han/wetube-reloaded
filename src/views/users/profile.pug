extend ../base
include ../mixins/video

block content 
    div.profile__data
        if user.avatarUrl
            img(src=user.avatarUrl).avatar
        else 
            img(src="https://mblogthumb-phinf.pstatic.net/MjAyMDExMDFfMTgy/MDAxNjA0MjI4ODc1NDMw.Ex906Mv9nnPEZGCh4SREknadZvzMO8LyDzGOHMKPdwAg.ZAmE6pU5lhEdeOUsPdxg8-gOuZrq_ipJ5VhqaViubI4g.JPEG.gambasg/%EC%9C%A0%ED%8A%9C%EB%B8%8C_%EA%B8%B0%EB%B3%B8%ED%94%84%EB%A1%9C%ED%95%84_%ED%95%98%EB%8A%98%EC%83%89.jpg?type=w800").avatar
        h3=user.name
    div.video-grid
        each video in user.videos
            +video(video)
        else 
            span.empty__message No videos found.